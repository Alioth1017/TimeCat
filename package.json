{
    "name": "timecat",
    "version": "1.0.0",
    "description": "TimeCat Web Recorder",
    "main": "index.ts",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "node scripts/dev.js",
        "build": "node scripts/build.js",
        "live": "node scripts/live.js",
        "f": "npx code-formatter --path packages",
        "doc": "npx typedoc --tsconfig tsconfig.json",
        "embed": "npm run build && cd dist && cp timecat.min.js ../../TimeCatChrome/src/assets/",
        "count": "find . -type f -not -path './node_modules/*' -not -path './dist/*'  -name '*.ts' | xargs wc -l"
    },
    "dependencies": {
        "koa": "^2.11.0",
        "socket.io": "^2.3.0"
    },
    "devDependencies": {
        "@oct16/code-formatter": "^1.0.9",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-html": "^0.1.1",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "@rollup/plugin-replace": "^2.3.1",
        "@types/node": "^13.9.2",
        "@types/pako": "^1.0.1",
        "@types/socket.io-client": "^1.4.32",
        "execa": "^4.0.0",
        "fs-extra": "^8.1.0",
        "pako": "^1.0.11",
        "rollup": "^1.32.0",
        "rollup-plugin-browsersync": "^1.1.0",
        "rollup-plugin-copy": "^3.3.0",
        "rollup-plugin-delete": "^1.2.0",
        "rollup-plugin-string": "^3.0.0",
        "rollup-plugin-terser": "^5.3.0",
        "rollup-plugin-typescript2": "^0.26.0",
        "typedoc": "^0.17.7",
        "typescript": "^3.9.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oct16/TimeCat.git"
    },
    "author": "oct16",
    "license": "GPL",
    "bugs": {
        "url": "https://github.com/oct16/TimeCat/issues"
    },
    "homepage": "https://github.com/oct16/TimeCat#readme"
}
