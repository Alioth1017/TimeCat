{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": false,
        "noUnusedLocals": false,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "types": [
            "@types/node"
        ],
        "rootDir": ".",
        "paths": {
            "@TimeCat/*": [
                "packages/*/src"
            ]
        }
    },
    "include": [
        "global.d.ts",
        "packages/*/src",
        "index.ts",
        "examples/*",
        "packages/*/__tests__",
        "packages/chrome/src/assets/ctrl.js"
    ]
}
